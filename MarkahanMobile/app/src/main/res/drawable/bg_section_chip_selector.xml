<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <solid android:color="#1f295a"/>
            <corners android:radius="20dp"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <!-- Shadow -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#5163aa"/> <!-- Shadow color -->
                    <corners android:radius="20dp"/>
                    <padding
                        android:bottom="2dp"
                        android:left="2dp"
                        android:right="2dp"
                        android:top="2dp"/>
                </shape>
            </item>
            <!-- White background -->
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/white"/>
                    <corners android:radius="20dp"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>