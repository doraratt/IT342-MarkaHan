<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.ForgotPassActivity">

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:text="Enter 4 digit code sent to you at"
        android:textSize="34sp"
        android:textColor="#333"
        android:fontFamily="@font/lexend_bold"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="30dp"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:text="###########"
        android:textSize="30sp"
        android:textColor="#333"
        android:fontFamily="@font/lexend_med"
        android:layout_marginLeft="30dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="70dp">

        <EditText
            android:id="@+id/code1"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_transpa"
            android:hint="*"
            android:fontFamily="@font/lexend_reg"
            android:textSize="50sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="50dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center" />

        <EditText
            android:id="@+id/code2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_transpa"
            android:hint="*"
            android:fontFamily="@font/lexend_reg"
            android:textSize="50sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="50dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <EditText
            android:id="@+id/code3"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_transpa"
            android:hint="*"
            android:fontFamily="@font/lexend_reg"
            android:textSize="50sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="50dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="center"
            android:gravity="center"/>

        <EditText
            android:id="@+id/code4"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@drawable/border_transpa"
            android:hint="*"
            android:fontFamily="@font/lexend_reg"
            android:textSize="50sp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:minHeight="50dp"
            android:layout_gravity="center"
            android:gravity="center"/>
    </LinearLayout>

    <Button
        android:id="@+id/verify_code"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:background="@drawable/border_blu"
        android:text="Verify"
        android:textSize="16sp"
        android:textColor="#fff"
        android:fontFamily="@font/lexend_reg"
        android:layout_marginTop="60dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Didn't receive a verification code?"
        android:textSize="15sp"
        android:textColor="#333"
        android:fontFamily="@font/lexend_reg"
        android:layout_marginTop="50dp"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Resend code | Change number"
        android:textSize="16sp"
        android:textColor="#0A588C"
        android:fontFamily="@font/lexend_med"
        android:layout_marginTop="5dp"
        android:layout_gravity="center"/>

</LinearLayout>