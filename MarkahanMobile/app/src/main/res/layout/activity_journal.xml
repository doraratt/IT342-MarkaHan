<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.markahanmobile.fragments.JournalActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#fff"
            app:title="Journal"
            app:titleTextColor="#000"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <!-- Add Journal Header -->
        <LinearLayout
            android:id="@+id/journalHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clickable="true"
            android:focusable="true"
            android:background="?attr/selectableItemBackground"> <!-- Optional: adds ripple effect -->

            <ImageView
                android:id="@+id/addJournalButtonIcon"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:src="@drawable/add"
                android:tint="#0A588C"
                android:contentDescription="Add Journal Entry" />

            <TextView
                android:id="@+id/addJournalButtonText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Journal Entry"
                android:textColor="#0A588C"
                android:textSize="18sp"
                android:layout_marginStart="8dp"
                android:fontFamily="@font/lexend_bold"/>
        </LinearLayout>

        <!-- Journal Entries List -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/journalRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/journalHeader"
            android:padding="16dp"/>

    </RelativeLayout>

    <!-- Navigation drawer (keep your existing code) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@drawable/drawer_bg"
        app:menu="@menu/drawer_menu"
        app:headerLayout="@layout/nav_header"
        app:itemTextAppearance="@style/DrawerMenuItemTextStyle"
        app:itemIconTint="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <include layout="@layout/nav_logout" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>