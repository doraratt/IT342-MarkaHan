<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Student Info Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/studentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#0A588C"
                android:textSize="20sp"
                android:fontFamily="@font/lexend_bold"/>

            <TextView
                android:id="@+id/currentAverage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:textColor="#0A588C"
                android:textSize="16sp"/>
        </LinearLayout>

        <!-- Grade Input Fields -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Grades (0-100)"
            android:textColor="#0A588C"
            android:textSize="16sp"
            android:layout_marginBottom="8dp"/>

        <!-- Filipino -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Filipino">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputFilipino"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>

        </com.google.android.material.textfield.TextInputLayout>

        <!-- English -->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="English">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputEnglish"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--Math-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Mathematics">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputMathematics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--Science-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Science">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputScience"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--AP-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="AP">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputAP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--ESP-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="ESP">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputESP"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--MAPEH-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="MAPEH">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputMAPEH"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--Computer-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Computer">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputComputer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!--TLE-->
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="TLE">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/inputTLE"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:maxLength="5"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Add all other subjects similarly -->
        <!-- Mathematics, Science, AP, ESP, MAPEH, Computer, TLE -->

        <!-- New Average Display -->
        <TextView
            android:id="@+id/newAverage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textColor="#0A588C"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="Cancel"
                android:textColor="#0A588C"
                android:backgroundTint="#E3F2FD"
                android:textAllCaps="false"/>

            <Button
                android:id="@+id/btnSave"
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:text="Save Grades"
                android:textColor="#FFFFFF"
                android:backgroundTint="#0A588C"
                android:textAllCaps="false"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>