<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.example.markahanmobile.fragments.AttendanceSheetActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#fff"
        app:title="Attendance Sheet"
        app:titleTextColor="#000"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

    <!-- Month selector -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/btnPrevMonth"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/leftarrow"
            android:tint="#0A588C"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <TextView
            android:id="@+id/txtMonthYear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="April 2023"
            android:textColor="#0A588C"
            android:textSize="18sp"
            android:fontFamily="@font/lexend_bold"
            android:gravity="center"/>

        <ImageView
            android:id="@+id/btnNextMonth"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/rightarrow"
            android:tint="#0A588C"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageView
            android:id="@+id/iconTable"
            android:layout_width="21dp"
            android:layout_height="20dp"
            android:src="@drawable/table"
            android:layout_marginStart="16dp"
            android:tint="#0A588C"/>

        <ImageView
            android:id="@+id/iconCalendar"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/calendar"
            android:layout_marginStart="8dp"
            android:tint="#0A588C"/>
    </LinearLayout>

    <!-- Attendance table container -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/btnPrint"
        android:layout_marginTop="?attr/actionBarSize">

        <!-- Fixed student names column -->
        <LinearLayout
            android:id="@+id/studentNamesColumn"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#F5F5F5">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:text="Student"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:fontFamily="@font/lexend_bold"
                android:gravity="center_vertical"
                android:paddingStart="8dp"
                android:background="#0A588C"/>

            <LinearLayout
                android:id="@+id/studentNames"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"/>
        </LinearLayout>

        <!-- Scrollable dates container -->
        <HorizontalScrollView
            android:id="@+id/scrollDates"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/studentNamesColumn"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <!-- Dates header row -->
                <LinearLayout
                    android:id="@+id/datesHeader"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:orientation="horizontal"
                    android:background="#0A588C"/>

                <!-- Attendance data rows -->
                <LinearLayout
                    android:id="@+id/attendanceData"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"/>
            </LinearLayout>
        </HorizontalScrollView>
    </RelativeLayout>

    <Button
        android:id="@+id/btnPrint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Print Attendance"
        android:textColor="#FFFFFF"
        android:background="@drawable/border_blu"
        android:layout_margin="16dp"/>
</RelativeLayout>